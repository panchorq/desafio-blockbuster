<p style="color: green"><%= notice %></p>

<div class="container">
  <h1>Clients</h1>

  <%= link_to "New client", new_client_path, class: "texto-tabla" %>

  <div id="clients">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col" class="texto-tabla">#</th>
          <th scope="col" class="texto-tabla">Name</th>
          <th scope="col" class="texto-tabla">Age</th>
          <th scope="col" class="texto-tabla">Movie</th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <%= render client %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
